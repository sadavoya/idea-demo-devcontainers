// Info https://containers.dev/implementors/json_reference/
{
  "name": "minimal_ubuntu",
  "image": "ubuntu:latest",
  "onCreateCommand": {
    "update": "apt update && apt -y upgrade",
    "installDependencies": "apt install -y git"
  },
  "customizations": {
    "jetbrains": {
      "backend": "IntelliJ"
    }
  },
  features: {
    "ghcr.io/devcontainers-contrib/features/kotlin-sdkman:2": {
      "jdkVersion": "17.0.10",
      "jdkDistro": "librca"
	},
  }
}

